<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    android:paddingTop="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_tk_anhdaidien"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/luan" />

        <TextView
            android:id="@+id/txt_tk_tenmonan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:text="@string/ten_mon_an_tk"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btn_tk_edit"
            app:layout_constraintStart_toEndOf="@+id/img_tk_anhdaidien"
            app:layout_constraintTop_toTopOf="@+id/img_tk_anhdaidien" />

        <TextView
            android:id="@+id/txt_tk_luotxem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="97dp"
            android:drawablePadding="5dp"
            android:text="@string/luot_xem_tk"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_tk_luotthich"
            app:layout_constraintStart_toStartOf="@+id/txt_tk_tenmonan"
            app:drawableLeftCompat="@drawable/visibility" />

        <TextView
            android:id="@+id/txt_tk_thoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="@string/thoi_gian_tk"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_tk_anhdaidien"
            app:layout_constraintStart_toStartOf="@+id/txt_tk_tenmonan"
            app:drawableLeftCompat="@drawable/ic_baseline_timer_24" />

        <ImageButton
            android:id="@+id/btn_tk_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/design_default_color_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_edit_white"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/txt_tk_luotthich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="@string/luot_thich_tk"
            android:textSize="18sp"
            app:drawableLeftCompat="@drawable/favorite_border"
            app:layout_constraintBottom_toTopOf="@+id/txt_tk_thoigian"
            app:layout_constraintStart_toStartOf="@+id/txt_tk_tenmonan"
            app:layout_constraintTop_toBottomOf="@+id/txt_tk_tenmonan" />

        <ImageButton
            android:id="@+id/btn_tk_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:background="@color/design_default_color_error"
            app:layout_constraintBottom_toBottomOf="@+id/img_tk_anhdaidien"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_delete_white"
            android:contentDescription="TODO" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
