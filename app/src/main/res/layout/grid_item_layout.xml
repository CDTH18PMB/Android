<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_anhdaidien"
        android:layout_width="163dp"
        android:layout_height="134dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_image_24" />

    <TextView
        android:id="@+id/textView_tenmon"
        android:layout_width="88dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView_anhdaidien"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_anhdaidien"
        app:layout_constraintTop_toBottomOf="@+id/imageView_anhdaidien" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_anhdaidien"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_anhdaidien"
        app:layout_constraintTop_toBottomOf="@+id/imageView_anhdaidien" />

    <TextView
        android:id="@+id/textView_heart"
        android:layout_width="65dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_baseline_like_red"
        android:gravity="center"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_tenmon"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="@+id/textView_tenmon"
        app:layout_constraintTop_toBottomOf="@+id/textView_tenmon" />

    <TextView
        android:id="@+id/textView_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_baseline_views_green"
        android:gravity="center"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_time"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView_time"
        app:layout_constraintTop_toBottomOf="@+id/textView_time" />
</androidx.constraintlayout.widget.ConstraintLayout>